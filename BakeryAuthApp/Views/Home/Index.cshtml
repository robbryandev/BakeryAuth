@{
  Layout = "_Layout";
}


@if (User.Identity.IsAuthenticated)
{
  <form action="/account/logoff" method="post">
    <button type="submit">Log Out</button>
  </form>
}
else 
{
  <p>Please @Html.ActionLink("log in", "LogIn", "Account") to manage your Treats.</p>
}
<p>@Html.ActionLink("Treats", "Index", "Treat")</p>
<p>@Html.ActionLink("Flavors", "Index", "Flavor")</p>